{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": false,
  },
  "lib": [
    "es6"
  ],
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}